<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        style="@style/SettingTitle"
        android:text="@string/chart_settings_title"/>
        <TextView
            style="@style/SettingDescription"
            android:text="@string/chart_settings_description" />
    
    <CheckBox
        style="@style/SettingCheckBox"
        android:id="@+id/OtherSettingsTrendLineChkBx"
        android:text="@string/chart_settings_trendline" />
    <CheckBox
        style="@style/SettingCheckBox"
        android:id="@+id/OtherSettingsTargetLineChkBx"
        android:text="@string/chart_settings_targetline" />

    <TextView
        style="@style/SettingTitle"
        android:text="@string/other_settings_title"/>
        <TextView
            style="@style/SettingDescription"
            android:text="@string/other_settings_description" />
    <CheckBox
        style="@style/SettingCheckBox"
        android:id="@+id/OtherSettingsBackupChkBx"
        android:text="@string/other_settings_backups" />
    
</LinearLayout>
</ScrollView>
